#!/bin/bash
#
#  banqd The Banq Core server.
#
#
# chkconfig: 345 80 20
# description: banqd
# processname: banqd
#

# Source function library.
. /etc/init.d/functions

# you can override defaults in /etc/sysconfig/banqd, see below
if [ -f /etc/sysconfig/banqd ]; then
        . /etc/sysconfig/banqd
fi

RETVAL=0

prog=banqd
# you can override the lockfile via BITCOIND_LOCKFILE in /etc/sysconfig/banqd
lockfile=${BITCOIND_LOCKFILE-/var/lock/subsys/banqd}

# banqd defaults to /usr/bin/banqd, override with BITCOIND_BIN
banqd=${BITCOIND_BIN-/usr/bin/banqd}

# banqd opts default to -disablewallet, override with BITCOIND_OPTS
banqd_opts=${BITCOIND_OPTS--disablewallet}

start() {
    echo -n $"Starting $prog: "
    daemon $DAEMONOPTS $banqd $banqd_opts
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch $lockfile
    return $RETVAL
}

stop() {
    echo -n $"Stopping $prog: "
    killproc $prog
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f $lockfile
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status $prog
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: service $prog {start|stop|status|restart}"
        exit 1
        ;;
esac
